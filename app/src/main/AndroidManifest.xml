<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.lesothovistorsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HistoricSites"
            android:label="@string/category_historic"/>
        <activity android:name=".Activities"
            android:label="@string/category_activities"/>
        <activity android:name=".Nature"
            android:label="@string/category_nature"/>
        <activity android:name=".Landmarks"
            android:label="@string/category_landmarks">
        </activity>
    </application>

</manifest>