<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_background"
    tools:context="com.example.android.lesothovistorsapp.MainActivity">

    <!-- Historic Sites category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/historic_sites"
            android:background="@color/category_historic"
            android:text="@string/category_historic"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activities"
            android:background="@color/category_activities"
            android:text="@string/category_activities"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nature"
            android:background="@color/category_nature"
            android:text="@string/category_nature"
            style="@style/CategoryStyle"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/landmarks"
            android:background="@color/category_landmarks"
            android:text="@string/category_landmarks"
            style="@style/CategoryStyle"/>
    </FrameLayout>




</LinearLayout>
